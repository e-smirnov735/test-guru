<%= form_with model: [:admin, @badge] do |f| %>
  <%= render 'shared/errors', resource: @badge %>
  <p>
    <%= f.label t('title') %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label 'Категория' %>:
    <%= f.collection_select :badge_rule_id, BadgeRule.all, :id, :title, prompt: true %>
  </p>
  <p>
    <%= f.label 'Badge params' %>:
    <%= f.text_field :rule_params %>
  </p>
  <p>
    <%= f.label t('.image_url') %><br>
    <%= f.select :url, image_list %>
  </p>
  <p><%= f.submit %> </p>
<% end %>
